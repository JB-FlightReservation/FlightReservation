	<select id="login" resultType="com.joongbu.flight_reservation.dto.AdminDto">
		SELECT *,admin_id adminId from ADMIN
 		WHERE admin_id=#{adminId} AND admin_pw=#{adminPw}
	</select>
	<select id="Adetail" resultType="com.joongbu.flight_reservation.dto.AdminDto">
		SELECT *,admin_id adminId FROM ADMIN
		WHERE admin_id=#{adminId}
	</select>
	<select id="Aupdate" parameterType="com.joongbu.flight_reservation.dto.AdminDto">
		UPDATE ADMIN SET
		admin_name=#{adminName}, admin_pw=#{adminPw}, admin_email=#{adminEmail}, admin_eno=#{adminEno}
		WHERE admin_id=#{adminId}
	</select>
	
	<insert id="cpInsert" parameterType="com.joongbu.flight_reservation.dto.CouponDto">
		INSERT INTO coupon
			( cp_name,cp_start,cp_end,cp_discount)
			VALUES
			(#{cpName},#{cpStart},#{cpEnd}, #{cpDiscount})
	</insert>
	<select id="list" resultType="com.joongbu.flight_reservation.dto.CouponDto" >
 		SELECT *,cp_name cpName FROM coupon 
 	</select>

</mapper>
